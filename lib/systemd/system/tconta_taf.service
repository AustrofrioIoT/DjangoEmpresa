# /lib/systemd/system/tconta_taf_daemon.service
#

[Unit]
Description=Telefactura server
After=rc.local.service udev.service mountkernfs.service postgresql.service

[Service]
Type=simple
User=root
# Corre en el puerto 1234
ExecStart=/bin/sh -c "/opt/telemap/tconta_taf/manage.py runserver 0.0.0.0:1234 2>> /var/log/tconta_taf_p1234.log"
ExecStop=/bin/sh -c "kill -9 `ps auxwww | grep manage.py| grep :1234 | head -1 | awk '{print $2}'`"
KillSignal=SIGHUP
Restart=always

[Install]
WantedBy=multi-user.target

